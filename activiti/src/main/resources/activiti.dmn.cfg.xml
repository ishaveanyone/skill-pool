<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="dmnEngineConfiguration"
		class="org.activiti.dmn.engine.impl.cfg.StandaloneDmnEngineConfiguration">
	        <property name="jdbcUrl" value="jdbc:postgresql://127.0.0.1:5432/activiti?currentSchema=public" />
	        <property name="jdbcDriver" value="org.postgresql.Driver" />
	        <property name="jdbcUsername" value="xupp" />
	        <property name="jdbcPassword" value="pass" />
	        <property name="databaseSchemaUpdate" value="true" />
	</bean>
</beans>
